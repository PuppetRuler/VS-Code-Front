.searchContainer {
    padding: 0 20rpx;
}

/* 搜索框 */
.header {
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx;
}

.searchInput {
    position: relative;
    flex: 1;
    background: rgba(237,237,237,0.3);
    border-radius: 30rpx;
}

.searchInput input {
    margin-left: 50rpx;
    height: 60rpx;
}

.searchIcon {
    position: absolute;
    left: 15rpx;
}

.searchInput .input-placeholder {
    font-size: 28rpx;
}

.searchInput .clear {
    position: absolute;
    right: 0;
    top: 0;
    font-size: 50rpx;
    z-index: 10;
}

.searchInput .cancel {
    width: 100rpx;
    text-align: center;
}

/* 热搜榜 */
.hotContainer .title {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.hotList {
    display: flex;
    flex-wrap: wrap;
}

.hotItem {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}

.hotItem .order {
    margin: 0 10rpx;
}

.hotItem .iconImage {
    width: 35rpx;
    height: 20rpx;
    margin-left: 20rpx;
}

/* 搜索内容展示 */
.searchContent {
    color: rgba(15, 12, 12, 0.6);
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.6);
}

.searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}

.searchItem .content {
    flex: 1;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
}

/* 搜索历史 */
.history {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    line-height: 50rpx;
    margin: 20rpx 0;
}

.history .title {
    height: 50rpx; 
    font-size: 28rpx; 
}

.history .historyItem {
    height: 50rpx;
    font-size: 26rpx;
    background-color: #ededed;
    margin-left: 20rpx;
    padding: 0 30rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}

.history .delete {
    position: absolute;
    bottom: 20rpx;
    right: 10rpx;
    font-size: 36rpx;
}